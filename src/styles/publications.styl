@import './colors.styl';

#publications
  .card
    overflow hidden
  a
    color theme-blue
    &:hover
      color theme-blue-hover
  ul
    list-style-type none
    padding 20px 0 0 0
    margin-top 20px
    li
      width 30%
      margin-right 5%
      margin-bottom 3%
      @media screen and (max-width: 900px)
        width 100%
        margin-left auto
        margin-right auto
      float left
      img
        size 100%
        margin-bottom 10px
      &:nth-child(3)
        margin-right 0
  .divide
    margin-left 20px
