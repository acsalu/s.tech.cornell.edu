@import './colors.styl';

#publications
  .pub-overlay
    @media screen and (max-width: 900px)
      display none
    position absolute
    width calc(100%+40px)
    height 80px
    background linear-gradient(rgba(0,0,0,0), rgba(0,0,0,.4))
    opacity .8
    left -40px
    bottom 0
    padding-top 40px
    text-align center
    text-shadow 0 1px 0 rgba(0,0,0,.8)
    font-size 22px
    color #fff
    cursor pointer
    z-index 9
    transition opacity .3s
    &:hover
      opacity 1
  .card
    position relative
    overflow hidden
    @media screen and (min-width: 900px)
      height 620px
  ul
    list-style-type none
    padding 20px 0 0 0
    margin-top 20px
    #mobile
      @media screen and (min-width: 900px)
        display none
      li
        width 100%
        margin-bottom 20px
        margin-left auto
        margin-right auto
        float left
        .image
          background-size cover
          width 99%
          height 150px
          margin-bottom 10px
    #desktop
      @media screen and (max-width: 900px)
        display none
      li
        width 100%
        margin-bottom 40px
        margin-left auto
        margin-right auto
        float left
        img
          width 100%
          min-height 100px
          border 2px solid theme-blue
        .column
          float left
          margin-right 6%
        #abstract
          margin-right 0
        p
          margin 0
        #image
          width 25%
          position relative
          .pub-video-overlay
            @media screen and (max-width: 900px)
              display none
            position absolute
            width 100%
            height 100%
            background rgba(0,0,0,.4)
            opacity .8
            left 0
            top 0
            text-align center
            text-shadow 0 1px 0 rgba(0,0,0,.8)
            font-size 60px
            color #fff
            cursor pointer
            z-index 8
            transition opacity .3s
            &:hover
              opacity 1
        .pub-video
          display none
        .pub-info
          width 32%
          position relative
          #title
            font-weight 400
            font-size 18px
            margin-bottom 10px
            text-transform uppercase
          #author, #conference
            font-weight 300
            color rgb(130, 130, 130)
          #author
            margin-bottom 7px
          #conference
            margin-bottom 0
          .links
            position absolute
            bottom 0
            left 0
            a
              display block
              margin-top 10px
        #abstract
          width 30%
          font-weight 300
          font-size 12px
          text-align justify
