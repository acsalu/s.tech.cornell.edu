@import 'nib'
@import './font-awesome.css';

*
  box-sizing border-box

body
  font-size 16px
  font-family Lato, sans-serif
  color rgb(60,60,60)
  background-color #fff

a
  text-decoration none
  outline 0
  color rgb(60,60,60)
  &, &:active, &:focus
    outline none

.fullscreen-bg
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  overflow hidden
  z-index -100

.fullscreen-bg-video
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  @media (min-aspect-ratio: 16/9)
    width: 100%
    height: auto
  @media (max-aspect-ratio: 16/9)
    width: auto
    height: 100%

.slide
  background-color rgba(0,0,0,.5)
