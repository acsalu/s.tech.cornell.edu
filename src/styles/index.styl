@import 'nib';
@import './font-awesome.css';
@import './people.styl';
@import './projects.styl';
@import './publications.styl';

*
  box-sizing border-box

@font-face
  font-family Cassannet
  src url('/assets/Cassannet.otf')

@font-face
  font-family CassannetBold
  src url('/assets/Cassannet Bold.otf')

body
  font-size 16px
  font-family Lato, sans-serif
  color rgb(60,60,60)
  background-color #fff
  transition all .7s
  width 100vw

a
  text-decoration none
  outline 0
  color rgb(255,255,255)
  transition all .7s
  &, &:active, &:focus
    outline none
  &:hover
    color rgba(255,255,255,.8)

.fullscreen-bg
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  overflow hidden
  z-index -100

.fullscreen-bg-video
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  @media (min-aspect-ratio: 16/9)
    width: 100%
    height: auto
  @media (max-aspect-ratio: 16/9)
    width: auto
    height: 100%

.slide
  width 100%
  margin-bottom 80px
  .title
    font-family Cassannet, sans-serif
    text-transform capitalize
    font-size 45px
    font-weight 400
    text-shadow 0 1px 0 rgba(0,0,0,.8)
  .header
    position absolute
    text-align center
    top 50%
    left 50%
    @media screen and (max-width: 900px)
      width 90%
    width 60%
    transform translate(-50%, -50%)
    color #fff
    .desc
      font-size 20px
      font-weight 400
      color rgba(255,255,255,.8)
  .header-stick
    display none
    position fixed
    text-align left
    left 0
    top 0
    background linear-gradient(rgba(0,0,0,.3), rgba(0,0,0,0))
    width 100vw
    color #fff
    .title
      float left
      padding-left 5%
      font-size 20px
    .menu
      float right
      padding-right 5%
      display inline-block
      line-height 64px
      text-shadow 0 1px 0 rgba(0,0,0,.8)
      &:hover
        cursor pointer
    ul.menu-dropdown
      position fixed
      display none
      top 50px
      right 5%
      @media screen and (max-width: 900px)
        width 90vw
        left 5vw
      background-color rgba(0,0,0,.5)
      width 200px
      color #fff
      border-radius 3px
      list-style-type none
      li
        line-height 40px
  .card
    width 90%
    min-height 90%
    margin-left auto
    margin-right auto
    background-color #fff
    padding 20px 20px
    border-radius 2px
    
  .subsection-title
    color theme-blue
  
  figure
    img
      width 100%  

    figcaption
      color theme-blue


